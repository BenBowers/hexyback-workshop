{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "generate-types": {
      "outputs": [
        "openapi/**"
      ],
      "inputs": [
        "infra/api-definition.ts"
      ]
    },
    "@hexy/docs#gen-api-docs-all": {
      "outputs": [
        "docs/hexy/**"
      ],
      "inputs": [
        "docusaurus.config.js"
      ],
      "dependsOn": [
        "@hexy/backend#generate-types"
      ]
    },
    "@hexy/docs#start": {
      "cache": false,
      "dependsOn": [
        "@hexy/docs#gen-api-docs-all"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "generate-types"
      ]
    },
    "lint": {
      "dependsOn": [
        "generate-types"
      ]
    },
    "test-ci": {},
    "ci": {
      "dependsOn": [
        "typecheck",
        "lint",
        "test-ci"
      ]
    }
  }
}